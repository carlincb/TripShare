
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create New Blog Post:</h3>
      <form method="post" action="api/blog/newimage" enctype="multipart/form-data"> 
      <label for="title">Title:</label>
      <input type="text" name="title">
            <label for="content">Content:</label>
      <input type="text" name="content">
        <input type="file" accept="image/*" name="image" /><br /><br />
        <input type="submit" value="Upload Image" name="submit">
      </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Your Blog Posts:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <div>
        <img src="upload/{{blog.image}}">
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>

<script type = "text/html" id = "debug-template">
<li class = "list-group-item text-%%color%%"> <strong> %%date%%</strong>:%%message%%</li>
</script>
<ul class = "list-group list-group-flush" id="debug"></ul>